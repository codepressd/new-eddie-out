    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <% if (user) { %> 
            <div class="profile">
                <img src="/img/whitewaterrafting.png">
                <h3><%= user.username %></h3>
                <p><%= user.description %></p>
                <hr>
            </div>
          <% } else { %>
             <div class="profile">
                <div class = "logInButton">
                  <a href = "/login">
                    <p class="nav-text">Login</p>
                  </a>
                </div>
                <div class = "signInButton">
                  <a href= "/signup">
                    <p class="nav-text">Sign up</p>
                  </a>
                </div>
                <div style="clear: both;"></div>
                <hr>
            </div>
          <% } %>
          <ul class="nav nav-sidebar nav-center">
            <li><a href="/browse">
                <p class="nav-icon"><i class="fa fa-tint" aria-hidden="true"></i></p>
                <p class="nav-text">Browse Rivers</p>
                </a></li>
            <hr>
            <li><a href="/chat">
                <p class="nav-icon"><i class="fa fa-comment-o" aria-hidden="true"></i></p>
                <p class="nav-text">Boater Chat</p>
            </a></li>
            <hr>
          </ul>
        </div>
        <!--<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">-->
